<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agenda_list_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="left|center"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:id="@+id/linQuiz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/activetab"
        android:baselineAligned="false"
        android:gravity="left|center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="left|center"
            android:orientation="vertical">

            <!-- Video Title -->

            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/video_title_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/textsizesmall"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/right_arrow1"
                android:contentDescription="TODO"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>