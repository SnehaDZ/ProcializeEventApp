<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InnerDrawerActivity.WeatherActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colortoolbar"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:elevation="@dimen/elevation"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/headerlogoIv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-10dp"
                android:contentDescription=" "
                 />

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


    <com.procialize.eventsapp.Fonts.RobotoTextview
        android:id="@+id/twTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4sp"
        android:text="Time and Weather"
        android:textColor="@color/black"
        android:textSize="@dimen/textsizenormal" />

    <LinearLayout
        android:id="@+id/twLin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1F73BA"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/cityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:padding="4sp"
                android:text=""
                android:textColor="@color/colorwhite"
                android:textSize="26dp" />


            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/countryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:padding="4sp"
                android:text=""
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/textsizesmall"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="vertical">

            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:gravity="right"
                android:padding="4sp"
                android:text=""
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/textsizesmall" />


            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:gravity="right"
                android:padding="4sp"
                android:text=""
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/textsizesmall" />


        </LinearLayout>


    </LinearLayout>

    <!-- <android.support.v4.widget.NestedScrollView
         android:fillViewport="true"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorwhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:id="@+id/dayTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="4sp"
                    android:text=""
                    android:textColor="#1F73BA"
                    android:textSize="@dimen/textsizesmall"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.procialize.eventsapp.Fonts.RobotoTextview
                        android:id="@+id/tempTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4sp"
                        android:text="00"
                        android:textColor="#1F73BA"
                        android:textSize="42sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                        </LinearLayout>

                        <com.procialize.eventsapp.Fonts.RobotoTextview
                            android:id="@+id/cTv"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.25"
                            android:text="C"
                            android:textColor="#1F73BA"
                            android:textSize="@dimen/textsizesmall"
                            android:textStyle="bold" />

                        <com.procialize.eventsapp.Fonts.RobotoTextview
                            android:id="@+id/fTv"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.25"
                            android:text="F"
                            android:textColor="#1F73BA"
                            android:textSize="@dimen/textsizesmall"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/highiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        android:src="@drawable/high" />

                    <com.procialize.eventsapp.Fonts.RobotoTextview
                        android:id="@+id/maxTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text=""
                        android:textColor="#1F73BA"
                        android:textSize="@dimen/textsizesmall"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/lowiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        android:src="@drawable/low" />


                    <com.procialize.eventsapp.Fonts.RobotoTextview
                        android:id="@+id/minTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text=""
                        android:textColor="#1F73BA"
                        android:textSize="@dimen/textsizesmall"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/infoIv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/sunny" />

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:id="@+id/infoTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:text=""
                    android:textColor="#1F73BA"
                    android:textSize="@dimen/textsizesmall"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="4sp"
                    android:text="sunset"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />


                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:id="@+id/indexTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="4sp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="4sp"
                    android:text="humidity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />


                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:id="@+id/humidityTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="4sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="4sp"
                    android:text="visibility"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />


                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:id="@+id/visibilityTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="4sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="4sp"
                    android:text="sunrise"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />


                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:id="@+id/feelTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="4sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorgrey" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/weatherRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>