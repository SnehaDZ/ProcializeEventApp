<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/diatitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@color/activetab"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="8.5"
                android:paddingLeft="10dp"
                android:text="Add Presentation"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/textsizesmall" />

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center"
                android:layout_weight="1.5"
                android:contentDescription="TODO"
                android:src="@drawable/cancel_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorwhite"
            android:orientation="vertical">

            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/nametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:text="Document Name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorwhite"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/mainLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittexthmbg"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:gravity="center">


                        <com.procialize.eventsapp.Fonts.RobotoEditext
                            android:id="@+id/edit_doc_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignStart="@+id/designationTv"
                            android:layout_alignTop="@+id/imageView"
                            android:layout_gravity="top"
                            android:backgroundTint="@color/colorwhite"
                            android:drawablePadding="5dp"
                            android:gravity="left|center"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsizesmall" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linTicket"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="#cccccc"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgTvel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="TODO"
                            android:padding="5dp"
                            android:src="@drawable/upload_doc" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.procialize.eventsapp.Fonts.RobotoButton
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Upload"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite" />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/progrss"
        android:visibility="gone"/>

</RelativeLayout>