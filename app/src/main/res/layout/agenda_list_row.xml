<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agenda_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:alpha="0.95"
    android:background="@color/colorwhite"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="3dp"
    android:weightSum="10" >

    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:gravity="top"
        android:orientation="vertical" >
        <WebView
            android:id="@+id/webviewAgenda"
            android:layout_width="match_parent"
            android:gravity="top"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content" />

        <!-- Title -->

        <com.procialize.eventsapp.Fonts.RobotoTextview
            android:id="@+id/agenda_title"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="1dip"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="Title"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/colorwhite"
            android:textStyle="bold" />

        <!-- Time -->

        <com.procialize.eventsapp.Fonts.RobotoTextview
            android:id="@+id/agenda_time_slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="00:00-00:00"
            android:textColor="@color/colorwhite"
            android:textSize="12sp"
            android:visibility="gone"
            android:textStyle="normal" />

        <!-- Description -->

        <com.procialize.eventsapp.Fonts.RobotoTextview
            android:id="@+id/agenda_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:singleLine="false"
            android:text="Description"
            android:visibility="gone"
            android:textColor="@color/colorwhite"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:contentDescription="TODO"
            android:src="@drawable/right_arrow1" />
    </LinearLayout>

</LinearLayout>