<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:background="@android:color/transparent"
    android:gravity="top"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="8.5"
                android:padding="5dp"
                android:textColor="@color/colorwhite"
                android:textSize="15dp"
                android:text="Set up Meeting"/>

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center"
                android:layout_weight="1.5"
                android:contentDescription="TODO"
                android:src="@drawable/cancel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/colorwhite"
            android:orientation="vertical"
            android:padding="5dp">

            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/exh_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:textSize="@dimen/textsizesmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <com.procialize.eventsapp.Fonts.RobotoTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittexthmbg"
                        android:orientation="horizontal">

                        <com.procialize.eventsapp.Fonts.RobotoTextview
                            android:id="@+id/txt_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:padding="10dp" />

                        <ImageView
                            android:id="@+id/img_date"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@color/linecolor"
                            android:gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/date_dialog" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <com.procialize.eventsapp.Fonts.RobotoTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittexthmbg"
                        android:orientation="horizontal">

                        <com.procialize.eventsapp.Fonts.RobotoTextview
                            android:id="@+id/txt_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:padding="10dp" />

                        <ImageView
                            android:id="@+id/img_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@color/linecolor"
                            android:gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/selct_time" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Description" />

            <com.procialize.eventsapp.Fonts.RobotoEditext
                android:id="@+id/etmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sendmessage"
                android:gravity="top|left"
                android:hint="Write here..."
                android:imeOptions="actionSend|flagNoEnterAction"
                android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
                android:lines="5"
                android:maxLength="250"
                android:maxLines="10"
                android:minLines="4"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="@dimen/textsizenormal" />

            <com.procialize.eventsapp.Fonts.RobotoTextview
                android:id="@+id/counttv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="250"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.procialize.eventsapp.Fonts.RobotoButton
                    android:id="@+id/submit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_weight="1"
                    android:background="@drawable/speakerbtnbg"
                    android:elevation="@dimen/elevation"
                    android:text="Send Request"
                    android:textAllCaps="false"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/textsizesmall" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>