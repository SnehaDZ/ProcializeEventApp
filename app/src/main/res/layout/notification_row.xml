<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/notiLin"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#1F73BA"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivtype"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="TODO" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="top">

                <ImageView
                    android:id="@+id/profileIV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/profilepic_placeholder" />

                <ProgressBar
                    android:id="@+id/progressView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/loader"
                    android:visibility="visible" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/designationTv"
                    android:layout_alignTop="@+id/imageView"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />

                <TextView
                    android:id="@+id/txt_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Sent you message"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textsizesmall" />

                <TextView
                    android:id="@+id/dataTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textsizesmall" />

                <TextView
                    android:id="@+id/messageTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textsizesmall" />

                <TextView
                    android:id="@+id/testdata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone"/>


                <Button
                    android:id="@+id/replyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/signupbutton"
                    android:text="@string/replybtn"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/textsizesmall"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/arrowIv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_rightarrow" />

                <ImageView
                    android:id="@+id/arrowIvmsg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_rightarrow" />
            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/gifiv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/elevation"
            android:contentDescription="TODO"
            android:paddingLeft="5dp" />


    </LinearLayout>


</LinearLayout>