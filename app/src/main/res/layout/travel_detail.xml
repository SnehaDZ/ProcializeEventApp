<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linTicket"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/speakerbtnbg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTvel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:padding="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/qnarow"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center">


                <com.procialize.eventsapp.Fonts.RobotoTextview
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/designationTv"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_gravity="top"
                    android:drawablePadding="5dp"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:text="Abheejit Saxena"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ic_rightarrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_rightarrow" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>